<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang Tâm Sự</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            color: #333;
            text-align: center;
            padding: 20px;
        }
        h1 {
            color: #ff6f61;
        }
        #messages {
            margin: 20px 0;
            border: 1px solid #ccc;
            padding: 10px;
            background: #fff;
            height: 200px;
            overflow-y: scroll;
        }
        #messageInput {
            width: 80%;
            padding: 10px;
            margin-bottom: 10px;
        }
        #submitBtn, #rememberBtn {
            padding: 10px 20px;
            border: none;
            background-color: #ff6f61;
            color: white;
            cursor: pointer;
        }
        #rememberBtn {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h1>Tâm sự với nhau ở đây nè</h1>
    <div id="messages"></div>
    <textarea id="messageInput" placeholder="Nhập tâm sự của bạn..."></textarea><br>
    <button id="submitBtn">Gửi</button>

    <h2>Nhấn nó mỗi khi em nhớ anh</h2>
    <button id="rememberBtn">Nhớ anh!</button>
    <div id="rememberMessage" style="display:none; margin-top: 20px; color: #ff6f61;">Anh cũng nhớ em!</div>

    <script>
        const messagesDiv = document.getElementById('messages');
        const messageInput = document.getElementById('messageInput');
        const submitBtn = document.getElementById('submitBtn');
        const rememberBtn = document.getElementById('rememberBtn');
        const rememberMessage = document.getElementById('rememberMessage');

        // Hàm hiển thị các tâm sự từ Local Storage
        function displayMessages() {
            const messages = JSON.parse(localStorage.getItem('messages')) || [];
            messagesDiv.innerHTML = ''; // Xóa nội dung hiện tại
            messages.forEach(message => {
                const newMessage = document.createElement('div');
                newMessage.textContent = message;
                messagesDiv.appendChild(newMessage);
            });
            messagesDiv.scrollTop = messagesDiv.scrollHeight; // Cuộn xuống dưới
        }

        // Gửi tâm sự
        submitBtn.onclick = function() {
            const message = messageInput.value.trim();
            if (message) {
                const messages = JSON.parse(localStorage.getItem('messages')) || [];
                messages.push(message);
                localStorage.setItem('messages', JSON.stringify(messages));
                messageInput.value = ''; // Xóa ô nhập liệu
                displayMessages(); // Cập nhật hiển thị
            }
        };

        // Nhấn nhớ anh
        rememberBtn.onclick = function() {
            rememberMessage.style.display = 'block';
            setTimeout(() => {
                rememberMessage.style.display = 'none';
            }, 3000); // Ẩn thông điệp sau 3 giây
        };

        // Hiển thị các tâm sự khi tải trang
        window.onload = displayMessages;
    </script>
</body>
</html>
